{
  "output": {
    "filePath": "DOCS/repository_context.txt",
    "style": "markdown",
    "removeEmptyLines": true,
    "fileSummary": true,
    "directoryStructure": true,
    "showLineNumbers": true,
    "topFilesLength": 10,
    "includeEmptyDirectories": false,
    "headerText": "This file is automatically generated by Repomix to provide AI tools with up-to-date repository context. Last updated by GitHub Actions."
  },
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "DOCS/repository_context.txt",
      ".env*",
      "*.log",
      "dist",
      "build",
      "coverage"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "cl100k_base"
  }
}
